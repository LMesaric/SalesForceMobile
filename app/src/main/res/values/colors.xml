<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--   color for the app bar and other primary UI elements -->
    <color name="colorPrimary">#6200ee</color>
    <color name="colorPrimaryRippleDark">#8b62e6</color>
    <color name="colorPrimaryRippleLight">#baa4ea</color>

    <!--   a darker variant of the primary color, used for
           the status bar (on Android 5.0+) and contextual app bars -->
    <color name="colorPrimaryDark">#0400ba</color>

    <!--   a secondary color for controls like checkboxes and text fields -->
    <color name="colorAccent">#ed1500</color>

    <color name="colorBackgroundWhite">@android:color/white</color>

    <color name="colorToastBackground">#323232</color>

    <color name="loginRegisterTitleCommon">@color/colorPrimary</color>
    <color name="loginRegisterTitleLarge">@color/loginRegisterTitleCommon</color>
    <color name="loginRegisterTitleMedium">@color/loginRegisterTitleCommon</color>

    <color name="colorListBorder">#E0E0E0</color>
    <color name="colorShadow">#88333333</color>
</resources>
