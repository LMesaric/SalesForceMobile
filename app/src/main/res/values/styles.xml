<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="MenuTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorBackgroundWhite</item>
    </style>

    <style name="mainButtonStyle">
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBackgroundWhite</item>
        <item name="android:background">@drawable/button_main_background</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="textViewDetailsStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="floatingActionButtonDetailsStyle" parent="Widget.Design.FloatingActionButton">
        <item name="elevation">2dp</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="PreviewDetailsTheme" parent="AppTheme">
        <item name="android:textViewStyle">@style/textViewDetailsStyle</item>
        <item name="floatingActionButtonStyle">@style/floatingActionButtonDetailsStyle</item>
    </style>

    <style name="collapsedToolbar">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBackgroundWhite</item>
    </style>

    <style name="expandedToolbar">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBackgroundWhite</item>
    </style>

</resources>
