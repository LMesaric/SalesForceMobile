<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactEditFragment">

    <ImageView
        android:id="@+id/ivContactEditAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spContactStatus"
        android:layout_width="wrap_content"
        android:visibility="gone"

        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/spContactTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spContactTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/etContactFirstName"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etContactFirstName"
        android:layout_width="0dp"
        android:visibility="gone"

        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_action_smile"
        android:ems="10"
        android:hint="@string/FirstName"
        android:inputType="textCapWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spContactTitle" />

    <EditText
        android:visibility="gone"

        android:id="@+id/etContactLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_action_smile"
        android:ems="10"
        android:hint="@string/LastName"
        android:inputType="textCapWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etContactFirstName" />

    <!-- Uneditable EditText used instead of TextView to keep the same appearance. -->
    <!-- LUKA - broken error message for this field (text not showing, only icon - SNACKBAR) -->




    <ImageButton
        android:id="@+id/btnContactChooseCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:contentDescription="@string/chooseCompany"
        app:layout_constraintBottom_toTopOf="@id/btnContactSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_action_company_accent" />

    <Button
        android:id="@+id/btnContactSave"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivContactEditAvatar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutContactDetailsCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/list_border"
                android:orientation="vertical"
                android:paddingBottom="@dimen/contactDetailsCardPadding"
                android:paddingTop="36dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/CompanyName"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/edit_text_subtitle_font" />

                <EditText
                    style="@style/editTextStyle"
                    android:id="@+id/etContactCompanyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:clickable="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/Company"
                    android:inputType="text"
                    android:longClickable="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutContactDetailsEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/list_border"
                android:orientation="vertical"
                android:paddingBottom="@dimen/contactDetailsCardPadding"
                android:paddingTop="@dimen/contactDetailsCardPadding">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/Email"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/edit_text_subtitle_font" />

                <EditText
                    style="@style/editTextStyle"
                    android:id="@+id/etContactEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:ems="10"
                    android:hint="@string/Email"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutContactDetailsPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/list_border"
                android:orientation="vertical"
                android:paddingBottom="@dimen/contactDetailsCardPadding"
                android:paddingTop="@dimen/contactDetailsCardPadding">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/PhoneNumber"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/edit_text_subtitle_font" />

                <EditText
                    style="@style/editTextStyle"
                    android:id="@+id/etContactPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="4dp"
                    android:ems="10"
                    android:hint="@string/PhoneNumber"
                    android:inputType="phone" />
            </LinearLayout>

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:background="@drawable/list_border"
                android:id="@+id/spContactPreferredTime"
                android:textColor="@color/colorPrimary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="@dimen/edit_text_subtitle_font"/>

            <LinearLayout
                android:id="@+id/layoutContactDetailsDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/list_border"
                android:orientation="vertical"
                android:paddingBottom="@dimen/contactDetailsCardPadding"
                android:paddingTop="@dimen/contactDetailsCardPadding">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/Details"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/edit_text_subtitle_font" />

                <MultiAutoCompleteTextView
                    style="@style/editTextStyle"
                    android:id="@+id/etContactDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:hint="@string/Details"
                    android:inputType="textMultiLine|textCapSentences" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
