<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingStart="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCompanies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayoutCompaniesMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvCardCompaniesName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/dummyCompanyName"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCardCompaniesCvsSegment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/dummyCompanyCvsSegment"
                app:layout_constraintStart_toStartOf="@+id/tvCardCompaniesName"
                app:layout_constraintTop_toBottomOf="@+id/tvCardCompaniesName" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayoutCompaniesExpandable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:animateLayoutChanges="true"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCardCompaniesCvsSegment">
                <!-- LUKA - set visibility to "gone"-->

                <TextView
                    android:id="@+id/tvCardCompaniesStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/dummyCompanyStatus"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvCardCompaniesOIB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/dummyCompanyOib"
                    app:layout_constraintStart_toStartOf="@+id/tvCardCompaniesStatus"
                    app:layout_constraintTop_toBottomOf="@+id/tvCardCompaniesStatus" />

                <TextView
                    android:id="@+id/tvCardCompaniesWebPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/dummyCompanyWebPage"
                    app:layout_constraintStart_toStartOf="@+id/tvCardCompaniesOIB"
                    app:layout_constraintTop_toBottomOf="@+id/tvCardCompaniesOIB" />

                <TextView
                    android:id="@+id/tvCardCompaniesPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/dummyCompanyPhone"
                    app:layout_constraintStart_toStartOf="@+id/tvCardCompaniesWebPage"
                    app:layout_constraintTop_toBottomOf="@+id/tvCardCompaniesWebPage" />

                <TextView
                    android:id="@+id/tvCardCompaniesIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/dummyCompanyIncome"
                    app:layout_constraintStart_toStartOf="@+id/tvCardCompaniesPhone"
                    app:layout_constraintTop_toBottomOf="@+id/tvCardCompaniesPhone" />

                <TextView
                    android:id="@+id/tvCardCompaniesCommunicationType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/dummyCompanyCommunicationType"
                    app:layout_constraintStart_toStartOf="@+id/tvCardCompaniesIncome"
                    app:layout_constraintTop_toBottomOf="@+id/tvCardCompaniesIncome" />

                <TextView
                    android:id="@+id/tvCardCompaniesEmployees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/dummyCompanyEmployees"
                    app:layout_constraintStart_toStartOf="@+id/tvCardCompaniesCommunicationType"
                    app:layout_constraintTop_toBottomOf="@+id/tvCardCompaniesCommunicationType" />

                <TextView
                    android:id="@+id/tvCardCompaniesDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/dummyCompanyDetails"
                    app:layout_constraintStart_toStartOf="@+id/tvCardCompaniesEmployees"
                    app:layout_constraintTop_toBottomOf="@+id/tvCardCompaniesEmployees" />

                <Button
                    android:id="@+id/btnCardCompaniesAddContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/addContact"
                    app:layout_constraintBaseline_toBaselineOf="@+id/btnCardCompaniesEditCompany"
                    app:layout_constraintEnd_toStartOf="@+id/btnCardCompaniesEditCompany" />

                <Button
                    android:id="@+id/btnCardCompaniesEditCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/Edit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCardCompaniesDetails" />

                <Button
                    android:id="@+id/btnCardCompaniesSelectCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/Select"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCardCompaniesDetails" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>