<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/companyEditorLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactEditorActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarCompanyEdit"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/EditorToolbarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/colorPrimary" />

    <FrameLayout
        android:id="@+id/companyEditorContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarCompanyEdit" />

</android.support.constraint.ConstraintLayout>
